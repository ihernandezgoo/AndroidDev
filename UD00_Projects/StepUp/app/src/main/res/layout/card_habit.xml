<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/habitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hábito"
            android:textSize="18sp"
            android:textColor="#2E3D49"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:background="@null"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habitDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:background="@null"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveHabitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_gravity="end"
            android:textColor="#FFFFFF"
            android:backgroundTint="#43A047"
            app:cornerRadius="12dp"
            android:elevation="2dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/habitDayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Racha de 0 días"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:paddingLeft="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/habitDayButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Un día más"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            app:cornerRadius="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#039BE5"
            android:layout_marginRight="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/removeHabits"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:layout_gravity="end"
            app:cornerRadius="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E53935"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>