<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a">

    <!-- MARCADOR SUPERIOR - Estilo NBA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2d2d2d"
        android:padding="16dp">

        <!-- PuntuaciÃ³n y reloj -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Equipo 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FF6B00"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNombreEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORANGE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvPuntosEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Reloj y perÃ­odo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tvQuarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Âº"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tvClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnStartStop"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="â–¶"
                        android:textSize="16sp"
                        android:backgroundTint="#4CAF50" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="âŸ²"
                        android:textSize="16sp"
                        android:backgroundTint="#757575"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Equipo 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#1976D2"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNombreEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLUE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvPuntosEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Faltas y Timeouts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Equipo 1 Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faltas: "
                    android:textColor="#cccccc"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvFaltasEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  TO: "
                    android:textColor="#cccccc"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvTimeoutsEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="60dp"
                android:layout_height="1dp" />

            <!-- Equipo 2 Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faltas: "
                    android:textColor="#cccccc"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvFaltasEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  TO: "
                    android:textColor="#cccccc"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvTimeoutsEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- LISTAS DE JUGADORES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Jugadores Equipo 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#2d2d2d"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUGADORES EN CANCHA"
                android:textColor="#FF6B00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llPlayersTeam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Jugadores Equipo 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#2d2d2d"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUGADORES EN CANCHA"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llPlayersTeam2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <!-- CONTROLES DE PUNTUACIÃ“N -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2d2d2d"
        android:padding="12dp">

        <!-- Botones de puntos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Equipo 1 Controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMas1Equipo1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#FF6B00" />

                    <Button
                        android:id="@+id/btnMas2Equipo1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#FF6B00"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:id="@+id/btnMas3Equipo1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#FF6B00"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnFaltaEquipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FALTA"
                    android:textSize="12sp"
                    android:backgroundTint="#FFC107"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Centro - Botones globales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <Button
                    android:id="@+id/btnUndo"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="âŸ² DESHACER"
                    android:textSize="10sp"
                    android:backgroundTint="#9E9E9E" />

                <Button
                    android:id="@+id/btnNextQuarter"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="SIGUIENTE Q"
                    android:textSize="9sp"
                    android:backgroundTint="#607D8B"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnStats"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“Š STATS"
                    android:textSize="11sp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnEndGame"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="FIN"
                    android:textSize="11sp"
                    android:backgroundTint="#F44336"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Equipo 2 Controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMas1Equipo2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#1976D2" />

                    <Button
                        android:id="@+id/btnMas2Equipo2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#1976D2"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:id="@+id/btnMas3Equipo2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="+3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#1976D2"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnFaltaEquipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FALTA"
                    android:textSize="12sp"
                    android:backgroundTint="#FFC107"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
