<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2C2C"
    android:gravity="center">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MARCADOR"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="#1976D2"/>

    <!-- Contenedor principal de marcadores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- EQUIPO 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="#1976D2">

            <TextView
                android:id="@+id/tvNombreEquipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo 1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvPuntosEquipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="80sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnMas1Equipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#0D47A1"/>

            <Button
                android:id="@+id/btnMas2Equipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#0D47A1"/>

            <Button
                android:id="@+id/btnMas3Equipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#0D47A1"/>

        </LinearLayout>

        <!-- Espacio entre equipos -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>

        <!-- EQUIPO 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="#D32F2F">

            <TextView
                android:id="@+id/tvNombreEquipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo 2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvPuntosEquipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="80sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnMas1Equipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#B71C1C"/>

            <Button
                android:id="@+id/btnMas2Equipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#B71C1C"/>

            <Button
                android:id="@+id/btnMas3Equipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textSize="20sp"
                android:layout_margin="4dp"
                android:backgroundTint="#B71C1C"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Botón Reset -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REINICIAR MARCADOR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:backgroundTint="#4CAF50"/>

</LinearLayout>