<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar equipos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipo A"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etTeamAName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre equipo A"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jugadores (mín 5, máx 12):"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:id="@+id/llPlayersA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Se añadirán dinámicamente EditTexts para jugadores -->

                </LinearLayout>

                <Button
                    android:id="@+id/btnAddPlayerA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar jugador"/>

            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Equipo B"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etTeamBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre equipo B"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jugadores (mín 5, máx 12):"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:id="@+id/llPlayersB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Se añadirán dinámicamente EditTexts para jugadores -->

                </LinearLayout>

                <Button
                    android:id="@+id/btnAddPlayerB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar jugador"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar partido"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
